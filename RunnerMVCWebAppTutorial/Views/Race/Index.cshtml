@model IEnumerable<Race>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Race Page</h1>

<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">

                        <div class="card-body">
                            <img class="bd-placeholder-img card-img-top" src=@item.Image width="100%" height="225" xmlns="@item.Image">
                            <p class="card-text">@item.Title</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Race" asp-action="DetailRace" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))/*Burada user ın rolune göre gösterim yapıyoruz. Data da user roles tanımlamıştık.
                                                    Burada orada ne girdiysek onları yazabiliriz.*/
                                    {
                                        <a asp-controller="Race" asp-action="EditRace" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Race" asp-action="DeleteRace" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-danger">Delete</a>
                                    }
                                    
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>


    </div>
</div>