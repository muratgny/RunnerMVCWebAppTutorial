@using RunnerMVCWebAppTutorial.ViewModels
@model EditUserProfileViewModel

<form asp-action="EditUserProfile" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id"/>
    <div class="form-grup">
        <label asp-for="Pace">Pace</label>
        <input asp-for="Pace" class="form-control" placeholder="pace"/>
        <span asp-validation-for="Pace" class="text-danger"></span>
    </div>
    <div class="form-grup">
        <label asp-for="Mileage">Mileage</label>
        <input asp-for="Mileage" class="form-control" placeholder="Mileage" />
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>
    <div class="form-grup">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" placeholder="City" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-grup">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" placeholder="State" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="form-grup">
        <label asp-for="Image" >Profile Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    
        
        
        <button  type="submit" class="btn btn-primary">Submit</button>
    
    <div>
        <small>For best results, use an image at least 256px by 256px in either .jpg or .png format</small>
    </div>

   

</form>